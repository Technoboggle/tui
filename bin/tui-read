#
#	Variable defaults
#
	. tui
	script_version=0.4
	ME="$(basename $0)"
	help_text="
$ME ($script_version)
Usage: 		$ME [options] MSG
Examples:	$ME \"What is your favorite color?\"
		$ME -p \"Enter your password:\" ; printf '\\\n'

"
	doPassword=""
#
#	Variable handling
#
	[[ -z $1 ]] && printf "$help_text" && exit $RET_HELP
	txt="$1"
	while getopts "hp" opt;do
	case "$opt" in
	"h")	printf "$help_text" ; exit $RET_HELP
		;;
	"p")	doPassword="-se"
		txt="$1"	
		;;
	esac
	done
	shift $(($OPTIND - 1))
#
#	Display
#
	[[ -z $1 ]] && \
		txt="Type your input:" || \
		txt="$1"
	read ${doPassword} -p "$BORDER_LEFT $txt " INPUT
	printf "$INPUT"
	
